* {
  margin-left: 1px;
  margin-right: 5px;
  padding-left: 5px;
  padding-right: 5px;
  padding-top: 2px;
  padding-bottom: 2px;
  font-family: "Awesome 6 Free Regular";
  font-size: 18px;
}

window#waybar {
    background: transparent; 
}

window#waybar>box {
    background: linear-gradient(to right, #11111b, #1e1e2e, #11111b);
    margin: 10px;
    margin-left: 45ex;
    margin-right: 45ex;
    border-radius: 25px;
}

#pulseaudio,
#clock,
#memory,
#cpu,
#tray,
#custom-sleep,
#custom-reboot,
#custom-shutdown,
#custom-distro,
#workspaces {
  padding-left: 10px;
  color: #f2cdcd;
}

#custom-distro {
  color: #f5e0dc;
}

#workspaces button {
  all: initial;
  border-radius: inherit;
  padding: 0;
}

#workspaces button.active {
  color: #f5c2e7;
}

#workspaces button:hover {
  color: #f38ba8;
}

#workspaces button.urgent {
  color: #eba0ac;
}
